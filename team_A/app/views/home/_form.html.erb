<%= form_tag("/posts/index", method: "get") do%>
<div class="container">
  <form class="navbar-form navbar-center" role="search">
    <div class="form-group">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <select name="category" class="form-control">
            <option value="">カテゴリ</option>
            <optgroup label="見にいく">
              <option value="映画">映画</option>
              <option value="ライブ/コンサート">ライブ/コンサート</option>
              <option value="展示会">展示会</option>
              <option value="美術館/博物館">美術館/博物館</option>
            </optgroup>
            <optgroup label="ぶらぶらする">
              <option value="街並み">街並み</option>
              <option value="動物園/水族館">動物園/水族館</option>
              <option value="ショッピング">ショッピング</option>
            </optgroup>
            <optgroup label="食を堪能する">
              <option value="ごはん">ごはん</option>
              <option value="スイーツ">スイーツ</option>
            </optgroup>
            <optgroup label="癒される">
              <option value="カフェ">カフェ</option>
              <option value="パワースポット">パワースポット</option>
              <option value="公園/広場">公園/広場</option>
            </optgroup>
            <optgroup label="雰囲気を味わう">
              <option value="雑貨屋">雑貨屋</option>
              <option value="イベント">イベント</option>
              <option value="バー">バー</option>
            </optgroup>
              <option value="その他">その他</option>
          </select>
          <p></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
          <input type="date" name="date" class="form-control">
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
          <select name="place" class="form-control" >
            <option value="">エリアを選ぶ</option>
            <optgroup label="都心エリア">
              <option value="千代田区">千代田区</option>
              <option value="中央区">中央区</option>
              <option value="港区">港区</option>
            </optgroup>
            <optgroup label="城東エリア">
              <option value="江東区">江東区</option>
              <option value="墨田区">墨田区</option>
              <option value="葛飾区">葛飾区</option>
              <option value="江戸川区">江戸川区</option>
            </optgroup>
            <optgroup label="上野エリア">
              <option value="台東区">台東区</option>
              <option value="荒川区">荒川区</option>
              <option value="足立区">足立区</option>
            </optgroup>
            <optgroup label="池袋エリア">
              <option value="豊島区">豊島区</option>
              <option value="文京区">文京区</option>
              <option value="北区">北区</option>
              <option value="板橋区">板橋区</option>
              <option value="練馬区">練馬区</option>
            </optgroup>
            <optgroup label="新宿エリア">
              <option value="新宿区">新宿区</option>
              <option value="中野区">中野区</option>
              <option value="杉並区">杉並区</option>
            </optgroup>
            <optgroup label="渋谷エリア">
              <option value="渋谷区">渋谷区</option>
              <option value="世田谷区">世田谷区</option>
              <option value="目黒区">目黒区</option>
            </optgroup>
            <optgroup label="品川エリア">
              <option value="大田区">大田区</option>
              <option value="品川区">品川区</option>
            </optgroup>
          </select>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
          <input type="text" name="content" class="form-control" placeholder="フリーワード">
        </div>
      </div>
        <button type="submit" class="btn user-edit-btn">Yukuateを探す？
        </button>
      </form>
    </div>
  </div>
<% end %>
