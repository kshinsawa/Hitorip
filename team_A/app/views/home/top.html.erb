        </select>
        <!-- <input type="text" class="form-control" placeholder="フリーワード"> -->
      </div>
      <button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></span></button>
    </form>
    <% end %>
  </div>
</div>
