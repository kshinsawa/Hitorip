<div class = "user-show-wrapper">
  <div class = "user-container">
    <div class = "user-img">
    </div>
    <div class = "user-name">
      <h2>ユーザ名</h2>
      <p><%= @user.user_name %></p>
    </div>
    <div class = "user-post-history">
      <h2>投稿履歴</h2>
      <% @post.each do |post| %>
      <%= link_to post.title, "/posts/#{post.id}/edit" %>
      <% end %>
    </div>
    <div class = "user-comment-history">
      <h2>コメント履歴</h2>
      <div class = 'edit-btn'>
        <p>コメントをクリックすると削除できます。</p>
        <% @comment.each do |comment| %>
        <%= link_to comment.content, "/comment/#{@comment.ids}", {method: :post} %>
        <% end %>
      </div>
    </div>
    <div class = "bookmarks-history">
      <h2>ブックマーク履歴</h2>
      <% @bookmark.each do |bookmark| %>
      <%= bookmark.user_id %>
      <% end %>
    </div>
    <div class = "user-edit-btn"><%= link_to("編集する", "/user/#{@user.id}/edit") %></div>
  </div>
 </div>

