<div class = "user-show-wrapper top-main">
  <div class = "user-container">
    <div class = "user-img">
    <div class = "user-name">
      <h2><%= @user.user_name %></h2>
    </div>
    <div class = "user-post-history">
      <h2>投稿履歴</h2>
      <% @post.each do |post| %>
      <%= link_to post.title, "/posts/#{post.id}/edit" %>
      <% end %>
    </div>
    <div class = "user-comment-history">
      <h2>コメント履歴</h2>
      <div class = 'edit-btn'>
        <p>コメントをクリックすると削除できます。</p>
        <% @comment.each do |comment| %>
        <%= link_to comment.content, "/comment/#{@comment.ids}", {method: :post} %>
        <% end %>
      </div>
    </div>
    <%= link_to("編集する", "/user/#{@user.id}/edit") %>
  </div>
 </div>
