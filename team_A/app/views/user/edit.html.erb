<div class = "user-wrapper top-main">
  <%= form_tag "/user/#{@user.id}", :method => :patch, multipart: true do %>
    <div class = "user-container">
      <h1>ユーザ情報を編集する</h1>
      <div class = "edit-img">
        <h2>トップ画像</h2>
        <input name = "image" type = "file" class = "form-control">
      </div>
      <div class = "edit-name">
        <h2>ユーザ名</h2>
        <input name = "user_name" value = "<%=@user.user_name%>" class = "form-control">
      </div>
      <div class = "edit-email">
        <h2>メールアドレス</h2>
        <input name = "email" value = "<%=@user.email%>" class = "form-control">
      </div>
      <div class = "edit-password">
        <h2>パスワード</h2>
        <input name = "password" value = "<%=@user.password%>" class = "form-control">
      </div>
    </div>
      <div>
        <input type = "submit" value = "編集を完了する" class = "btn user-edit-btn">
      </div>
  <% end %>
</div>
</div>
