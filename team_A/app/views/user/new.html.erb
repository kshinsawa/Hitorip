<div class = "user-wrapper top-main">
  <%= form_tag "/user", multipart: true do %>
    <div class = "container">
      <div class="form-error">
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      </div>
        <h1>新規登録する</h2>
        <h2>ユーザ情報を入力してください。</h2>
      <div class = "user-img">
        <h2>トップ画像を選択</h2>
        <input name = "image" type = "file" class = "form-control" style="width: 300px; margin-left: auto; margin-right: auto;">
      </div>
      <div class = "new-user-name">
        <h2>ユーザ名を入力</h2>
        <input name = "user_name" type="text" placeholder="ユーザ名" class="form-control" style="width: 300px; margin-left: auto; margin-right: auto;">
      </div>
      <div class = "new-user-email">
        <h2>メールアドレスを入力</h2>
        <input name = "email" type="text" placeholder="メールアドレス" class="form-control" style="width: 300px; margin-left: auto; margin-right: auto;">
      </div>
      <div class = "new-user-password">
        <h2>パスワードを入力</h2>
        <input name = "password" type="password" placeholder="パスワード" class="form-control" style="width: 300px; margin-left: auto; margin-right: auto;">
      </div>
    </div>
      <div class = "registration-submit">
        <input type="submit" value = "登録する" class= "btn user-edit-btn">
      </div>
  <% end %>
  </div>
