<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <%= @post.title %>
      <%= @post.date %>
      <%= @post.place %>
      <%= @post.content %>
    </div>
    <div class="post-menus">
      <% if @bookmark == nil %>
      <div class = "btn bookmark-btn"><%=link_to "ブックマーク", "/posts/#{@post.id}/bookmark", {method: :post} %></div>
      <% else %>
      <div class = "btn return-btn"><%=link_to "ユーザトップに戻る", "/user/#{@current_user.id}" %></div>
    </div>
      <% end %>
  </div>
</div>
