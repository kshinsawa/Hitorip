<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <input type="text" name="title" placeholder="タイトル" class="form-control">
        <input type="file" name="image_name" class="form-control">
        <input type="date" name="date" class="form-control">
        <select name="place" class="form-control">
          <%= @post.place%>
          <option value="">場所</option>
          <option value=""><都心エリア>千代田区・中央区・港区</option>
          <option value=""><城東エリア>江東区・墨田区・葛飾区・江戸川区</option>
          <option value=""><上野エリア>台東区・荒川区・足立区</option>
          <option value=""><池袋エリア>豊島区・文京区・北区・板橋区・練馬区</option>
          <option value=""><新宿エリア>新宿区・中野区・杉並区</option>
          <option value=""><渋谷エリア>渋谷区・世田谷区・目黒区</option>
          <option value=""><品川エリア>品川区・大田区</option>
        </select>
        <select name="category" class="form-control">
          <%= @post.category%>
          <option value="">カテゴリ</option>
          <option value="">イベント</option>
          <option value="">エンタメ</option>
          <option value="">カフェ</option>
          <option value="">アート</option>
          <option value="">リラックス</option>
          <option value="">その他</option>
        </select>
        <textarea name="content" placeholder="詳細" class="form-control">
          <%= @post.content%>
        </textarea>
        <input type="submit" value="投稿" class="form-control">
      </div>
    </div>
    <% end %>
  </div>
</div>
